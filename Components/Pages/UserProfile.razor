@page "/UserProfile"

<div class="profile-container">
    <!-- Sekcja z danymi użytkownika -->
    <div class="profile-info">
        <h2>Profil Użytkownika</h2>
        <div class="profile-field">
            <strong>Imię:</strong> <span>@User.FirstName</span>
        </div>
        <div class="profile-field">
            <strong>Nazwisko:</strong> <span>@User.LastName</span>
        </div>
        <div class="profile-field">
            <strong>E-mail:</strong> <span>@User.Email</span>
        </div>
    </div>

    <!-- Sekcja przycisków akcji -->
    <div class="profile-actions">
        <button class="edit-button" @onclick="EditProfile">Edytuj</button>
        <button class="logout-button" @onclick="Logout">Wyloguj</button>
    </div>
</div>

<style>
    .profile-container {
        max-width: 600px;
        margin: 10rem auto;
        padding: 3rem;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .profile-info h2 {
        text-align: center;
        margin-bottom: 1rem;
    }

    .profile-field {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid #ddd;
    }

    .profile-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
    }

    .edit-button,
    .logout-button {
        flex: 1;
        padding: 0.75rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        margin: 0 0.5rem;
    }

    .edit-button {
        background: #38bdfa;
        color: white;
    }

        .edit-button:hover {
            background: #0288d1;
        }

    .logout-button {
        background: #fc7a6b;
        color: white;
    }

        .logout-button:hover {
            background: #c0392b;
        }
</style>

@code {
    // Dane użytkownika (można później podpiąć do bazy danych)
    private UserModel User = new UserModel
        {
            FirstName = "Jan",
            LastName = "Kowalski",
            Email = "jan.kowalski@example.com"
        };

    // Obsługa kliknięcia przycisku "Edytuj"
    private void EditProfile()
    {
        // Tu można przekierować do strony edycji profilu
        Console.WriteLine("Przekierowanie do edycji profilu...");
    }

    // Obsługa kliknięcia "Wyloguj"
    private void Logout()
    {
        // Tutaj można dodać faktyczną logikę wylogowania
        Console.WriteLine("Wylogowywanie użytkownika...");
    }

    // Model danych użytkownika
    private class UserModel
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Email { get; set; }
    }
}

